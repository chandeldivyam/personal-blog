---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import { SITE_TITLE, POSTS_PER_PAGE } from '../../lib/config';
import { formatDate } from '../../lib/utils';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const title = `Blog - ${SITE_TITLE}`;
const description = 'All blog posts';
---

<Base title={title} description={description}>
  <div class="container">

    {posts.length > 0 ? (
      <div class="posts-list">
        {posts.map((post) => (
          <article class="post-item">
            <h2 class="post-title">
              <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
            </h2>
            <p class="post-description">{post.data.description}</p>
            <div class="post-meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="no-posts">
        <h2>No posts yet</h2>
        <p>Check back soon for new content!</p>
      </div>
    )}
  </div>
</Base>

<style>
  .blog-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .blog-title {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-md);
  }

  .blog-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .post-item {
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .post-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .post-title {
    margin-bottom: var(--space-sm);
  }

  .post-title a {
    color: var(--color-text);
    text-decoration: none;
    font-size: var(--font-size-2xl);
  }

  .post-title a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .post-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-relaxed);
    font-size: var(--font-size-lg);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-sm);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .post-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .tag {
    background-color: var(--color-border);
    color: var(--color-text-secondary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius);
    font-size: 0.75rem;
    font-weight: 500;
  }

  .no-posts {
    text-align: center;
    padding: var(--space-xl);
  }

  .no-posts h2 {
    margin-bottom: var(--space-md);
    color: var(--color-text);
  }

  .no-posts p {
    color: var(--color-text-secondary);
    font-size: var(--font-size-lg);
  }

  @media (max-width: 768px) {
    .blog-header {
      margin-bottom: var(--space-mobile-xl);
      padding-bottom: var(--space-mobile-lg);
    }
    
    .blog-title {
      font-size: var(--font-size-mobile-3xl);
      margin-bottom: var(--space-mobile-md);
    }
    
    .blog-description {
      font-size: var(--font-size-mobile-lg);
      line-height: var(--line-height-mobile-relaxed);
    }
    
    .posts-list {
      gap: var(--space-mobile-xl);
    }
    
    .post-item {
      padding-bottom: var(--space-mobile-xl);
    }
    
    .post-title {
      margin-bottom: var(--space-mobile-sm);
    }
    
    .post-title a {
      font-size: var(--font-size-mobile-xl);
      line-height: 1.3;
    }
    
    .post-description {
      margin-bottom: var(--space-mobile-md);
      line-height: var(--line-height-mobile-relaxed);
      font-size: var(--font-size-mobile-base);
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-mobile-sm);
    }
    
    .post-tags {
      margin-top: var(--space-mobile-xs);
    }
  }
</style>