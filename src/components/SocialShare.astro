---
export interface Props {
  title: string;
  url: string;
  description?: string;
  className?: string;
}

const { title, url, description = '', className = '' } = Astro.props;

// Encode for URL sharing
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
const encodedDescription = encodeURIComponent(description);

// Social share URLs
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}&quote=${encodedTitle}`;
const redditUrl = `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`;
const hackerNewsUrl = `https://news.ycombinator.com/submitlink?u=${encodedUrl}&t=${encodedTitle}`;
---

<div class={`social-share ${className}`}>
  <span class="social-share-label">Share:</span>
  
  <div class="social-share-buttons">
    <a
      href={twitterUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button twitter"
      aria-label="Share on Twitter"
      title="Share on Twitter"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>

    <a
      href={linkedinUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button linkedin"
      aria-label="Share on LinkedIn"
      title="Share on LinkedIn"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>

    <a
      href={facebookUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button facebook"
      aria-label="Share on Facebook"
      title="Share on Facebook"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
    </a>

    <a
      href={redditUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button reddit"
      aria-label="Share on Reddit"
      title="Share on Reddit"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
      </svg>
    </a>

    <a
      href={hackerNewsUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share-button hackernews"
      aria-label="Share on Hacker News"
      title="Share on Hacker News"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M0 24V0h24v24H0zM6.951 5.896l4.112 7.708v5.064h1.583v-4.972l4.148-7.799h-1.749l-2.457 4.875c-.372.745-.688 1.434-.688 1.434s-.297-.708-.651-1.434L8.831 5.896h-1.88z"/>
      </svg>
    </a>

    <button
      type="button"
      class="social-share-button copy-link"
      aria-label="Copy link"
      title="Copy link to clipboard"
      data-url={url}
    >
      <svg class="copy-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
      </svg>
      <svg class="check-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
      </svg>
      <span class="copy-text">Copy</span>
    </button>
  </div>
</div>

<style>
  .social-share {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin: var(--space-xl) 0;
    padding: var(--space-md);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .social-share-label {
    font-weight: 600;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    flex-shrink: 0;
  }

  .social-share-buttons {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .social-share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text-secondary);
    text-decoration: none;
    cursor: pointer;
    font-size: 0;
  }

  .social-share-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .social-share-button.twitter:hover {
    background: #1da1f2;
    color: white;
    border-color: #1da1f2;
  }

  .social-share-button.linkedin:hover {
    background: #0077b5;
    color: white;
    border-color: #0077b5;
  }

  .social-share-button.facebook:hover {
    background: #1877f2;
    color: white;
    border-color: #1877f2;
  }

  .social-share-button.reddit:hover {
    background: #ff4500;
    color: white;
    border-color: #ff4500;
  }

  .social-share-button.hackernews:hover {
    background: #ff6600;
    color: white;
    border-color: #ff6600;
  }

  .social-share-button.copy-link {
    position: relative;
    overflow: hidden;
  }

  .social-share-button.copy-link:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .social-share-button.copy-link.copied {
    background: #10b981;
    border-color: #10b981;
    color: white;
  }

  .copy-text {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.75rem;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
  }

  .social-share-button.copy-link:hover .copy-text {
    opacity: 1;
  }

  .social-share-button.copy-link:hover .copy-icon,
  .social-share-button.copy-link:hover .check-icon {
    opacity: 0;
  }

  .social-share-button.copy-link.copied .copy-text {
    opacity: 1;
  }

  .social-share-button.copy-link.copied .copy-icon {
    display: none;
  }

  .social-share-button.copy-link.copied .check-icon {
    display: block;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .social-share {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-mobile-sm);
      margin: var(--space-mobile-xl) 0;
      padding: var(--space-mobile-md);
    }

    .social-share-buttons {
      width: 100%;
      justify-content: center;
      gap: var(--space-mobile-md);
    }
    
    .social-share-button {
      width: 44px;
      height: 44px;
    }
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .social-share-button {
      transition: none;
    }
    
    .social-share-button:hover {
      transform: none;
    }
  }
</style>

<script>
  // Use a more TypeScript-friendly approach without extending Window
  const SOCIAL_SHARE_KEY = '__socialShareHandler';
  
  // Store the handler using a key that TypeScript won't complain about
  if (!(window as any)[SOCIAL_SHARE_KEY]) {
    (window as any)[SOCIAL_SHARE_KEY] = async function(event: Event) {
      const button = event.currentTarget as HTMLButtonElement;
      const url = button.getAttribute('data-url');
      
      if (!url) return;
      
      try {
        await navigator.clipboard.writeText(url);
        
        // Visual feedback
        const copyIcon = button.querySelector('.copy-icon') as HTMLElement;
        const checkIcon = button.querySelector('.check-icon') as HTMLElement;
        const copyText = button.querySelector('.copy-text') as HTMLElement;
        
        button.classList.add('copied');
        if (copyText) copyText.textContent = 'Copied!';
        
        // Reset after 2 seconds
        setTimeout(() => {
          button.classList.remove('copied');
          if (copyText) copyText.textContent = 'Copy';
        }, 2000);
        
      } catch (err) {
        // Fallback for browsers that don't support clipboard API
        const textArea = document.createElement('textarea');
        textArea.value = url;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        // Show feedback
        const copyText = button.querySelector('.copy-text') as HTMLElement;
        if (copyText) copyText.textContent = 'Copied!';
        setTimeout(() => {
          if (copyText) copyText.textContent = 'Copy';
        }, 2000);
      }
    };
  }

  // Function to attach the event listeners
  function attachSocialShare() {
    const handler = (window as any)[SOCIAL_SHARE_KEY];
    const copyButtons = document.querySelectorAll('.social-share-button.copy-link');
    
    copyButtons.forEach(button => {
      // Remove any existing listeners first
      button.removeEventListener('click', handler);
      // Add the listener
      button.addEventListener('click', handler);
    });
  }

  // Attach on initial load
  attachSocialShare();

  // Re-attach after each navigation with View Transitions
  document.addEventListener('astro:after-swap', attachSocialShare);
</script>